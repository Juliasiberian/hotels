<div id="<%= dom_id hotel %>">
  <p>
    <strong>Name:</strong>
    <%= hotel.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= hotel.address %>
  </p>

  <p>
    <strong>Picture:</strong>
    <%= image_tag(hotel.picture, height: 200, width: 200) %>
  </p>

  <p>
    <strong>City:</strong>
    <%= hotel.city %>
  </p>

  <p>
    <strong>Dirty:</strong>
    <%= Dirty.new(hotel.city).call %>
  </p>

  
</div>
